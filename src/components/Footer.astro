---
import { ChevronRight, Github, Instagram, Linkedin } from "@lucide/astro";
import { Image } from "astro:assets";
---

<footer
  class="bg-[#F8F9FA] dark:bg-gray-900 py-12 px-6 md:px-12 lg:px-24 font-sans"
>
  <div
    class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24 pb-16"
  >
    <!-- Left Section: Newsletter/Email -->
    <div class="flex flex-col justify-center max-w-lg">
      <h2
        class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white leading-tight mb-8"
      >
        HAVE AN IDEA, QUESTION, OR COLLABORATION IN MIND? LETâ€™S TALK.
      </h2>

      <div class="flex items-center gap-2 group">
        <a
          href="mailto:gdg@sjec.ac.in"
          class="text-xl md:text-2xl font-bold text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors flex items-center gap-2"
        >
          gdg@sjec.ac.in
          <ChevronRight/>
        </a>
      </div>
    </div>

    <!-- Right Section: Links -->
    <div class="grid grid-cols-2 gap-8 md:gap-16">
      <div>
        <h3
          class="text-lg font-bold text-gray-900 dark:text-white mb-6 uppercase tracking-wider"
        >
          Menu
        </h3>
        <ul class="space-y-4">
          <li>
            <a
              href="#about"
              class="text-gray-600 dark:text-gray-400 hover:text-blue-500 dark:hover:text-white transition-colors"
              >About Us</a
            >
          </li>
          <li>
            <a
              href="#events"
              class="text-gray-600 dark:text-gray-400 hover:text-blue-500 dark:hover:text-white transition-colors"
              >Events</a
            >
          </li>
          <li>
            <a
              href="#team"
              class="text-gray-600 dark:text-gray-400 hover:text-blue-500 dark:hover:text-white transition-colors"
              >Team</a
            >
          </li>
          <li>
            <a
              href="#projects"
              class="text-gray-600 dark:text-gray-400 hover:text-blue-500 dark:hover:text-white transition-colors"
              >Projects</a
            >
          </li>
          <li>
            <a
              href="#blogs"
              class="text-gray-600 dark:text-gray-400 hover:text-blue-500 dark:hover:text-white transition-colors"
              >Blogs</a
            >
          </li>
        </ul>
      </div>
      <div>
        <h3
          class="text-lg font-bold text-gray-900 dark:text-white mb-6 uppercase tracking-wider"
        >
          Support
        </h3>
        <ul class="space-y-4">
          <li>
            <a
              href="mailto:gdg@sjec.ac.in"
              class="text-gray-600 dark:text-gray-400 hover:text-blue-500 dark:hover:text-white transition-colors"
              >Contact</a
            >
          </li>
          <li>
            <a
              href="https://policies.google.com/faq"
              class="text-gray-600 dark:text-gray-400 hover:text-blue-500 dark:hover:text-white transition-colors"
              >Help & FAQ</a
            >
          </li>
          <li>
            <a
              href="https://policies.google.com/terms"
              class="text-gray-600 dark:text-gray-400 hover:text-blue-500 dark:hover:text-white transition-colors"
              >Terms & Conditions</a
            >
          </li>
          <li>
            <a
              href="https://policies.google.com/privacy"
              class="text-gray-600 dark:text-gray-400 hover:text-blue-500 dark:hover:text-white transition-colors"
              >Privacy Policy</a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Section -->
  <div
    class="max-w-7xl mx-auto border-t border-gray-200 dark:border-gray-800 pt-12 grid grid-cols-1 md:grid-cols-3 items-center gap-8"
  >
    <!-- Social Handles -->
    <div class="flex items-center justify-center md:justify-start gap-6">
      <a
        href="https://www.instagram.com/gdg.sjec/"
        target="_blank"
        class="text-gray-600 dark:text-gray-400 hover:text-pink-600 dark:hover:text-pink-500 transition-all transform hover:scale-110"
      >
        <Instagram/>
      </a>
      <a
        href="https://linkedin.com/company/gdg-campus-sjec"
        target="_blank"
        class="text-gray-600 dark:text-gray-400 hover:text-blue-700 dark:hover:text-blue-500 transition-all transform hover:scale-110"
      >
        <Linkedin/>
      </a>
      <a
        href="https://github.com/gdgsjec"
        target="_blank"
        class="text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white transition-all transform hover:scale-110"
      >
        <Github/>
      </a>
    </div>

    <!-- Theme Toggle (Middle) -->
    <div class="flex justify-center">
      <button
        id="theme-toggle-footer"
        class="group relative w-16 h-8 rounded-full bg-black/5 dark:bg-white/5 border border-black/10 dark:border-white/10 backdrop-blur-xl transition-all duration-500 flex items-center p-1 overflow-hidden"
        aria-label="Toggle theme"
      >
        <!-- Icons (Permanent) -->
        <div
          class="relative z-10 flex w-full justify-between items-center px-1.5 pointer-events-none"
        >
          <div
            class="sun-wrapper text-gray-400 group-hover:text-yellow-500 transition-colors"
          >
            <svg
              class="w-3.5 h-3.5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2.5"
                d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
              ></path>
            </svg>
          </div>
          <div
            class="moon-wrapper text-gray-400 group-hover:text-blue-400 transition-colors"
          >
            <svg
              class="w-3.5 h-3.5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2.5"
                d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
              ></path>
            </svg>
          </div>
        </div>

        <!-- Liquid Indicator -->
        <div
          id="theme-indicator-footer"
          class="absolute left-1 w-6 h-6 rounded-full bg-white dark:bg-white shadow-[0_2px_10px_rgba(0,0,0,0.1)] transition-transform duration-500 ease-[cubic-bezier(0.34,1.56,0.64,1)]"
        >
        </div>
      </button>
    </div>

    <!-- Copyright & GDG Logo -->
    <div class="flex flex-col items-center md:items-end gap-4">
      <div id="logo-footer" class="cursor-pointer">
        <Image
          src="/images/GDG_LOGO.webp"
          alt="GDG Logo"
          class="h-4 md:h-6 w-auto transition-opacity hover:opacity-80"
          width={100}
          height={100}
          fetchpriority="high"
        />
      </div>
      <p
        id="copyright"
        class="text-sm text-gray-500 dark:text-gray-400 text-center md:text-right"
      >
        &copy; {new Date().getFullYear()} GDG Campus SJEC. All Rights Reserved.
      </p>
    </div>
  </div>
</footer>

<script>
  // Smooth Scroll to top on logo click
  const logo = document.getElementById("logo-footer");
  if (logo) {
    logo.addEventListener("click", () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  }

  // Scroll to Top Button
  const scrollBtn = document.createElement("button");
  scrollBtn.innerHTML = `
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 15.75 7.5-7.5 7.5 7.5" />
    </svg>
  `;
  scrollBtn.className =
    "fixed bottom-8 right-8 bg-white dark:bg-gray-800 text-gray-900 dark:text-white p-4 rounded-full shadow-2xl transition-all duration-300 transform translate-y-20 opacity-0 z-50 hover:bg-gray-100 dark:hover:bg-gray-700 border border-gray-100 dark:border-gray-700";
  document.body.appendChild(scrollBtn);

  window.addEventListener("scroll", () => {
    if (window.scrollY > 400) {
      scrollBtn.classList.remove("translate-y-20", "opacity-0");
      scrollBtn.classList.add("translate-y-0", "opacity-100");
    } else {
      scrollBtn.classList.add("translate-y-20", "opacity-0");
      scrollBtn.classList.remove("translate-y-0", "opacity-100");
    }
  });

  scrollBtn.addEventListener("click", () => {
    window.scrollTo({ top: 0, behavior: "smooth" });
  });
</script>

<style>
  /* Ensure Google Sans is applied */
  footer {
    font-family: "Google Sans", var(--font-sans);
  }

  /* Simple newsletter animation focal point */
  input:focus + button {
    color: #3b82f6;
  }
</style>
