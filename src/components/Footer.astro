    <!-- Copyright & GDG Logo -->
    <div class="flex flex-col items-center md:items-end gap-4">
      <div id="logo-footer" class="cursor-pointer">
        <Image
          src="/images/GDG_LOGO.png"
          alt="GDG Logo"
          class="h-4 md:h-6 w-auto transition-opacity hover:opacity-80"
          width={100}
          height={100}
          fetchpriority="high"
        />
      </div>
      <p
        id="copyright"
        class="text-sm text-gray-500 dark:text-gray-400 text-center md:text-right"
      >
        &copy; {new Date().getFullYear()} GDG Campus SJEC. All Rights Reserved.
      </p>
    </div>
