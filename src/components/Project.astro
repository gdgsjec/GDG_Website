---
import projects from "../content/projects.json";

interface Project {
    title: string;
    description: string;
    tag: string;
    image?: string;
    websiteLink: string;
    githubLink: string;
}

const typedProjects: Project[] = projects;
---

<section class="py-16 sm:py-20 lg:py-24 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 sm:mb-16 lg:mb-20">
            <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-4 sm:mb-6">
                <span class="google-blue">P</span>
                <span class="google-red">r</span>
                <span class="google-yellow">o</span>
                <span class="google-blue">j</span>
                <span class="google-green">e</span>
                <span class="google-red">c</span>
                <span class="google-yellow">t</span>
                <span class="google-blue">s</span>
            </h2>
            <p class="text-gray-700 dark:text-gray-300 text-lg sm:text-xl font-semibold">
                Discover what we've been building
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 projects-scroll-container">
            {typedProjects.map((project) => (
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl overflow-hidden flex flex-col border-2 border-transparent hover:border-dashed hover:border-gray-200 dark:hover:border-gray-400 transition-all duration-300 hover:transform hover:scale-105">
                    <div class="p-4 sm:p-6">
                        {project.image && (
                            <img
                                class="h-44 sm:h-48 lg:h-52 w-full object-cover rounded-lg"
                                src={project.image}
                                alt={`${project.title} Project Image`}
                                loading="lazy"
                                width="700"
                                height="250"
                            />
                        )}
                    </div>

                    <div class="p-4 sm:p-6 flex flex-col flex-grow">
                        <div class="flex items-center mb-3 sm:mb-4">
                            <h3 class="text-lg sm:text-xl font-bold text-gray-800 dark:text-gray-100">
                                {project.title}
                            </h3>
                        </div>

                        <p class="text-gray-600 dark:text-gray-300 text-sm sm:text-base mb-6 flex-grow leading-relaxed">
                            {project.description}
                        </p>

                        <div class="flex justify-between items-center mt-auto">
                            <span class="text-xs sm:text-sm font-medium bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full px-3 py-1 sm:px-4 sm:py-2">
                                {project.tag}
                            </span>
                            <div class="flex items-center space-x-3 sm:space-x-4">
                                <a
                                    href={project.websiteLink}
                                    class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 transition-colors duration-200"
                                    aria-label={`${project.title} website`}
                                >
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                                    </svg>
                                </a>

                                <a
                                    href={project.githubLink}
                                    class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 transition-colors duration-200"
                                    aria-label={`${project.title} GitHub`}
                                >
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.91 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
  .google-blue { color: #4285f4; }
  .google-red { color: #db4437; }
  .google-yellow { color: #f4b400; }
  .google-green { color: #0f9d58; }

  @media (max-width: 1024px) {
    .projects-scroll-container {
      display: flex;
      overflow-x: auto;
      gap: 1.5rem;
      scroll-snap-type: x mandatory;
      padding-bottom: 0.75rem;
      scrollbar-width: thin;
      scrollbar-color: rgba(66,133,244,0.4) transparent;
    }
    .projects-scroll-container::-webkit-scrollbar {
      height: 8px;
    }
    .projects-scroll-container::-webkit-scrollbar-thumb {
      background-color: rgba(66,133,244,0.4);
      border-radius: 9999px;
    }
    .projects-scroll-container > div {
      flex: 0 0 85%;
      min-width: 85%;
      scroll-snap-align: start;
    }
  }

  @media (max-width: 640px) {
    .projects-scroll-container > div {
      flex: 0 0 90%;
      min-width: 90%;
    }
  }
</style>