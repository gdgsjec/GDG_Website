---
import { Image } from "astro:assets";
import projects from "../content/projects.json";
import { ChevronRight, Users } from "@lucide/astro";

interface Project {
  slug: string;
  title: string;
  oneLiner: string;
  description: string;
  category: string;
  tags: string[];
  media: {
    thumbnail: string;
    screenshots?: string[];
  };
  links: {
    github: string;
    live: string;
    docs?: string;
  };
  team: {
    type: string;
    contributors: {
      name: string;
      role: string;
    }[];
  };
  techStack: {
    languages?: string[];
    frameworks?: string[];
    googleTechnologies?: string[];
    others?: string[];
  };
}

interface Props {
  limit?: number;
  showAllLink?: boolean;
}

const { limit, showAllLink = false } = Astro.props;

let typedProjects: Project[] = projects;

if (limit) {
  typedProjects = typedProjects.slice(0, limit);
}
---

<section id="projects" class="py-24 px-6 md:px-12 lg:px-24 font-sans overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-20">
      <h2 class="text-4xl md:text-6xl font-bold mb-4 tracking-tight text-gray-900 dark:text-white">
        Innovation built on <span
          class="text-blue-500 dark:text-blue-400">C</span
        ><span class="text-red-500 dark:text-red-400">A</span><span
          class="text-[#FBBC04] dark:text-yellow-400">M</span
        ><span class="text-green-500 dark:text-green-400">P</span><span
          class="text-red-500 dark:text-red-400">U</span><span class="text-blue-500 dark:text-blue-400">S</span>
      </h2>
      <p class="text-gray-600 dark:text-gray-400 text-lg md:text-xl max-w-2xl mx-auto">
        Discover the practical solutions and creative projects developed by our student community.
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {
        typedProjects.map((project) => (
          <a 
            href={`/projects/${project.slug}`}
            class="group bg-white dark:bg-[#0B0D17] border border-gray-100 dark:border-gray-800 rounded-[1.5rem] overflow-hidden flex flex-col shadow-sm hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 no-underline"
          >
            <!-- Project Image -->
            <div class="relative aspect-video w-full overflow-hidden">
              <Image
                src={project.media.thumbnail}
                alt={project.title}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                width={600}
                height={338}
                loading="lazy"
              />
              <div class="absolute inset-0 bg-black/5 dark:bg-white/[0.02] group-hover:opacity-0 transition-opacity"></div>
              
              <div class="absolute top-4 left-4">
                <span class="px-3 py-1 bg-white/90 dark:bg-gray-900/90 backdrop-blur-sm rounded-lg text-[10px] font-bold uppercase tracking-wider text-gray-900 dark:text-white border border-gray-100 dark:border-white/10">
                  {project.category}
                </span>
              </div>
            </div>

            <!-- Content -->
            <div class="p-6 flex flex-col flex-grow">
              <div class="flex items-start justify-between mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white tracking-tight group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
                  {project.title}
                </h3>
                <ChevronRight/>
              </div>
              
              <p class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed mb-5 line-clamp-2">
                {project.oneLiner || project.description}
              </p>

              <!-- Contributors Row -->
              <div class="pt-4 border-t border-gray-100 dark:border-gray-800 mb-4">
                <div class="flex items-start gap-2.5 text-gray-500 dark:text-gray-400">
                  <Users class="w-4 h-4"/>
                  <div class="flex flex-col">
                    <span class="text-[11px] uppercase tracking-[0.05em] font-bold text-gray-500 dark:text-gray-400 mb-0.5">Contributors</span>
                    <span class="text-sm font-bold text-gray-800 dark:text-gray-100">
                      {project.team.contributors.slice(0, 2).map(c => c.name).join(", ")}{project.team.contributors.length > 2 ? " & others" : ""}
                    </span>
                  </div>
                </div>
              </div>

              <!-- Tech Stack Tags (Pick first 3) -->
              <div class="flex flex-wrap gap-2 mt-auto">
                {[
                  ...(project.techStack.frameworks || []),
                  ...(project.techStack.languages || []),
                  ...(project.techStack.googleTechnologies || [])
                ].slice(0, 3).map((tech) => (
                  <span class="px-2.5 py-0.5 bg-gray-50 dark:bg-gray-800/50 text-gray-600 dark:text-gray-400 text-[10px] font-bold rounded border border-gray-100 dark:border-white/5 uppercase tracking-wide">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </a>
        ))
      }
    </div>
    {
      showAllLink && (
        <div class="flex justify-center mt-16">
          <a
            href="/projects"
            class="group px-6 py-2.5 md:px-8 md:py-3.5 border border-gray-200 dark:border-gray-800 rounded-full text-sm md:text-base font-bold text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-white/5 transition-all duration-300"
          >
            Explore all projects
          </a>
        </div>
      )
    }
  </div>
</section>

<style>
  section {
    font-family: "Google Sans", sans-serif;
  }
</style>