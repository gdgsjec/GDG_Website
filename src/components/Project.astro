---
import { Image } from "astro:assets";
import projects from "../content/projects.json";

interface Project {
    title: string;
    description: string;
    tag: string;
    image?: string;
    websiteLink: string;
    githubLink: string;
}

const typedProjects: Project[] = projects;
---

<section id="projects" class="py-24 px-6 md:px-12 lg:px-24 font-sans">
  <div class="max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="flex justify-between items-end mb-16">
      <div>
        <h2 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white tracking-tight">
          Projects
        </h2>
      </div>
      <a 
        href="/projects" 
        class="group px-6 py-2.5 md:px-8 md:py-3.5 border border-gray-200 dark:border-gray-800 rounded-full text-sm md:text-base font-bold text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-white/5 transition-all duration-300"
      >
        View all
      </a>
    </div>

    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-16">
      {typedProjects.slice(0, 2).map((project) => (
        <div class="group flex flex-col">
          <!-- Project Image -->
          <div class="relative aspect-video w-full mb-8 overflow-hidden rounded-[2.5rem] bg-gray-100 dark:bg-gray-800/50 shadow-sm border border-gray-100 dark:border-gray-800">
            {project.image && (
              <Image
                src={project.image.startsWith('src/') ? '/' + project.image : project.image} 
                alt={project.title} 
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                loading="lazy"
                width={100}
                height={100}
                fetchpriority="high"
              />
            )}
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-black/5 dark:bg-white/[0.02] group-hover:opacity-0 transition-opacity"></div>
            
            <!-- Category Tag -->
            <div class="absolute top-6 left-6">
              <span class="px-4 py-1.5 bg-black/50 backdrop-blur-md text-white text-xs font-bold rounded-full uppercase tracking-widest border border-white/20">
                {project.tag}
              </span>
            </div>
          </div>
          
          <!-- Project Info -->
          <div class="flex flex-col flex-grow">
            <div class="flex justify-between items-start mb-4">
              <h3 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white leading-tight group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
                {project.title}
              </h3>
              
              <div class="flex gap-3 mt-1">
                <a href={project.githubLink} target="_blank" class="text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors" aria-label="Github">
                  <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                </a>
                <a href={project.websiteLink} target="_blank" class="text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors" aria-label="Link">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244" />
                  </svg>
                </a>
              </div>
            </div>
            
            <p class="text-gray-600 dark:text-gray-400 text-lg leading-relaxed line-clamp-2">
              {project.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  section {
    font-family: "Google Sans", sans-serif;
  }
</style>