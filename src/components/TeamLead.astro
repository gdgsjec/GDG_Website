---
import teamMembers from '../content/teamLead.json';
import { Image } from "astro:assets";

interface Props {
  isScrollable?: boolean;
}

const { isScrollable = false } = Astro.props;

const colors: Record<string, string> = {
  blue: "border-blue-500/20 dark:border-blue-400/30",
  red: "border-red-500/20 dark:border-red-400/30",
  yellow: "border-yellow-500/20 dark:border-yellow-400/30",
  green: "border-green-500/20 dark:border-green-400/30"
}
---

<section id="team-lead" class="w-full py-24 px-6 md:px-12 lg:px-24 font-sans text-gray-900 dark:text-white relative overflow-hidden">
  <!-- Dynamic Background Elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-blue-500/5 dark:bg-blue-600/10 blur-[120px] rounded-full -translate-y-1/2 translate-x-1/2"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-green-500/5 dark:bg-blue-500/10 blur-[120px] rounded-full translate-y-1/2 -translate-x-1/2"></div>

  <div class="max-w-7xl mx-auto relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-6xl font-bold mb-4 tracking-tight">
        The Past <span
          class="text-blue-500 dark:text-blue-400">L</span
        ><span class="text-red-500 dark:text-red-400">E</span><span
          class="text-[#FBBC04] dark:text-yellow-400">A</span
        ><span class="text-green-500 dark:text-green-400">D</span>'s
      </h2>
      <p class="text-gray-600 dark:text-gray-400 text-lg md:text-xl max-w-2xl mx-auto">
        The minds whose impact continues beyond their term.
      </p>
    </div>

    <div class="relative group px-4 md:px-0">
      <div 
        id={isScrollable ? "team-lead-slider" : "team-lead-grid"}
        class={isScrollable 
          ? "flex md:grid md:grid-cols-2 lg:grid-cols-5 overflow-x-auto md:overflow-visible no-scrollbar gap-6 md:gap-8 pb-12 pt-4 px-2 snap-x snap-mandatory" 
          : "flex flex-wrap justify-center gap-8 md:gap-10"}
      >
        {teamMembers.map((member, index) => (
          <div class={isScrollable ? "flex-shrink-0 w-[85%] md:w-full snap-center" : "w-full sm:w-[calc(50%-1.25rem)] lg:w-[calc(20%-1.6rem)]"}>
            <div class="group/card flex flex-col items-center text-center bg-gray-50 dark:bg-[#1A1D2B] border border-gray-100 dark:border-white/5 rounded-[2rem] p-6 md:p-8 transition-all duration-300 hover:shadow-2xl hover:shadow-blue-500/10 hover:-translate-y-2 h-[20rem] md:h-[24rem]">
              
              <!-- Circular Image (Matching Event style scaled) -->
              <div class={`w-24 h-24 md:w-28 md:h-28 rounded-full overflow-hidden mb-6 border-4 shadow-lg shrink-0 mx-auto transition-transform duration-500 group-hover/card:scale-110 ${Object.values(colors)[index % 4]}`}>
                <Image
                  src={member.image}
                  alt={member.name}
                  class="w-full h-full object-cover"
                  width={200}
                  height={200}
                />
              </div>
              
              <!-- Information Section -->
              <div class="flex flex-col items-center w-full text-gray-900 dark:text-white">
                <h3 class="text-lg md:text-xl font-bold group-hover/card:text-blue-500 dark:group-hover/card:text-blue-400 transition-colors leading-tight">
                  {member.name.split(' ')[0]} <br /> {member.name.split(' ').slice(1).join(' ')}
                </h3>
                
                <!-- 2 lines of spacing -->
                <div class="h-6 md:h-8"></div>
                
                <p class="text-gray-500 dark:text-gray-400 text-xs md:text-sm font-bold uppercase line-clamp-1">
                  {member.role}
                </p>
              </div>

              <!-- Social Links at Bottom -->
              <div class="mt-auto flex gap-4">
                {member.linkedin && (
                  <a href={member.linkedin} target="_blank" class="text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-all hover:scale-110">
                    <svg class="h-5 w-5 fill-current" viewBox="0 0 24 24"><path
                      d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                    ></path></svg>
                  </a>
                )}
                {member.github && (
                  <a href={member.github} target="_blank" class="text-gray-400 hover:text-black dark:hover:text-white transition-all hover:scale-110">
                    <svg class="h-5 w-5 fill-current" viewBox="0 0 24 24"
            ><path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path></svg>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>

      {isScrollable && (
        <div class="flex items-center gap-4 mt-8 px-4 md:hidden">
          <button 
            id="prev-lead"
            aria-label="Previous lead"
            class="p-3 border border-gray-200 dark:border-gray-800 rounded-full text-gray-400 dark:text-gray-600 hover:text-black dark:hover:text-white hover:border-black dark:hover:border-white transition-all duration-300 focus:outline-none bg-white dark:bg-[#0B0D17] shadow-sm"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
            </svg>
          </button>
          <button 
            id="next-lead"
            aria-label="Next lead"
            class="p-3 border border-gray-200 dark:border-gray-800 rounded-full text-gray-400 dark:text-gray-600 hover:text-black dark:hover:text-white hover:border-black dark:hover:border-white transition-all duration-300 focus:outline-none bg-white dark:bg-[#0B0D17] shadow-sm"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
            </svg>
          </button>
        </div>
      )}
    </div>
  </div>
</section>

<script>
  function setupLeadSlider() {
    const slider = document.getElementById('team-lead-slider');
    const nextBtn = document.getElementById('next-lead');
    const prevBtn = document.getElementById('prev-lead');

    if (slider && nextBtn && prevBtn) {
      const scroll = (direction: 'next' | 'prev') => {
        const card = slider.querySelector('.flex-shrink-0');
        if (!card) return;
        const cardWidth = (card as HTMLElement).offsetWidth;
        const spacing = 24; // gap-6
        const scrollVal = direction === 'next' ? (cardWidth + spacing) : -(cardWidth + spacing);
        slider.scrollBy({ left: scrollVal, behavior: 'smooth' });
      };

      nextBtn.addEventListener('click', () => scroll('next'));
      prevBtn.addEventListener('click', () => scroll('prev'));
    }
  }

  // Initial setup
  setupLeadSlider();

  // Re-run on View Transitions
  document.addEventListener('astro:page-load', setupLeadSlider);
</script>

<style>
  section {
    font-family: "Google Sans", sans-serif;
  }
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>