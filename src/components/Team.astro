---
import teamMembers from '../content/team.json';

const colors = {
  blue: "bg-[#4285F4]",
  red: "bg-[#EA4335]",
  yellow: "bg-[#FBBC04]",
  green: "bg-[#34A853]"
}
---

<section id="team" class="w-full bg-white dark:bg-[#0B0D17] py-24 px-6 md:px-12 lg:px-24 font-sans text-gray-900 dark:text-white transition-colors duration-300 overflow-hidden relative">
  <!-- Dynamic Background Elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-blue-500/5 dark:bg-blue-600/10 blur-[120px] rounded-full -translate-y-1/2 translate-x-1/2"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-green-500/5 dark:bg-blue-500/10 blur-[120px] rounded-full translate-y-1/2 -translate-x-1/2"></div>

  <div class="max-w-7xl mx-auto relative z-10">
    <div class="text-center mb-20">
      <h2 class="text-4xl md:text-6xl font-bold mb-4 tracking-tight">
        Built by <span class="text-[#4285F4] italic font-serif">talented</span> people in campus
      </h2>
      <p class="text-gray-600 dark:text-gray-400 text-lg md:text-xl max-w-2xl mx-auto">
        Meet the student team behind GDG SJEC, committed to growing a collaborative tech community.
      </p>
    </div>

    <!-- Team Slider Container -->
    <div class="relative group/slider">
      <div 
        id="team-slider" 
        class="flex overflow-x-auto snap-x snap-mandatory gap-8 pb-12 no-scrollbar scroll-smooth px-4"
      >
        {teamMembers.map((member) => (
          <div class="flex-none w-[85%] sm:w-[45%] lg:w-[31%] xl:w-[23%] snap-start">
            <div class="group relative bg-gray-50 dark:bg-[#1A1D2B] rounded-3xl overflow-hidden aspect-[9/16] transition-all duration-500 hover:-translate-y-2 border border-gray-200 dark:border-white/5 shadow-sm hover:shadow-xl dark:hover:border-blue-500/30">
              
              <!-- Image Section -->
              <div class="absolute inset-0 transition-all duration-700">
                <img 
                  src={member.image} 
                  alt={member.name} 
                  class="w-full h-full object-cover opacity-100 group-hover:scale-105 transition-transform duration-700"
                />
                <!-- Gradient Overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-60 group-hover:opacity-30 transition-opacity"></div>
              </div>

              <!-- Normal State Info -->
              <div class="absolute bottom-0 left-0 right-0 p-8 transform group-hover:translate-y-full transition-transform duration-500 ease-in-out">
                <h3 class="text-2xl font-bold mb-1 text-white">{member.name}</h3>
                <p class="text-white text-sm font-semibold mb-4 tracking-wide">{member.role}</p>
                
                <div class="flex gap-4">
                  <a href={member.linkedin} target="_blank" class="text-white/80 hover:text-white transition-colors">
                    <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                  </a>
                  <a href={member.github} target="_blank" class="text-white/80 hover:text-white transition-colors">
                    <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                  </a>
                </div>
              </div>

              <!-- Hover State Info (Bio) -->
              <div class={`absolute inset-0 p-8 ${colors[member.color as keyof typeof colors]} flex flex-col justify-end transform translate-y-full group-hover:translate-y-0 transition-transform duration-500 ease-in-out`}>
                <h3 class="text-2xl font-bold mb-1 text-white">{member.name}</h3>
                <p class="text-white/90 text-sm font-bold mb-4 uppercase tracking-widest">{member.role}</p>
                <p class="text-white text-md leading-relaxed mb-6 font-medium">
                  "{member.bio}"
                </p>
                <div class="flex gap-4">
                  <a href={member.linkedin} target="_blank" class="p-2 bg-white/10 rounded-full hover:bg-white/20 text-white transition-all">
                    <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                  </a>
                  <a href={member.github} target="_blank" class="p-2 bg-white/10 rounded-full hover:bg-white/20 text-white transition-all">
                    <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Navigation Arrows -->
      <div class="flex items-center gap-4 mt-8 px-4">
        <button 
          id="prev-team"
          aria-label="Previous member"
          class="p-3 border border-gray-200 dark:border-gray-800 rounded-full text-gray-400 dark:text-gray-600 hover:text-black dark:hover:text-white hover:border-black dark:hover:border-white transition-all duration-300 focus:outline-none"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
          </svg>
        </button>
        <button 
          id="next-team"
          aria-label="Next member"
          class="p-3 border border-gray-200 dark:border-gray-800 rounded-full text-gray-400 dark:text-gray-600 hover:text-black dark:hover:text-white hover:border-black dark:hover:border-white transition-all duration-300 focus:outline-none"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  const slider = document.getElementById('team-slider');
  const nextBtn = document.getElementById('next-team');
  const prevBtn = document.getElementById('prev-team');

  if (slider && nextBtn && prevBtn) {
    const scrollAmount = () => {
      const card = slider.querySelector('.snap-start');
      return card ? card.clientWidth + 32 : 300;
    };

    nextBtn.addEventListener('click', () => {
      slider.scrollBy({ left: scrollAmount(), behavior: 'smooth' });
    });

    prevBtn.addEventListener('click', () => {
      slider.scrollBy({ left: -scrollAmount(), behavior: 'smooth' });
    });
  }
</script>

<style>
  section {
    font-family: "Google Sans", sans-serif;
  }
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>