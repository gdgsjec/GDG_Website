---
import teamMembers from '../content/team.json';
import { Image } from "astro:assets";

interface Props {
  isScrollable?: boolean;
}

const { isScrollable = false } = Astro.props;

const colors: Record<string, string> = {
  blue: "border-blue-500/20 dark:border-blue-400/30",
  red: "border-red-500/20 dark:border-red-400/30",
  yellow: "border-yellow-500/20 dark:border-yellow-400/30",
  green: "border-green-500/20 dark:border-green-400/30"
}
---

<section id="team" class="w-full py-24 px-6 md:px-12 lg:px-24 font-sans text-gray-900 dark:text-white relative overflow-hidden">
  <!-- Dynamic Background Elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-blue-500/5 dark:bg-blue-600/10 blur-[120px] rounded-full -translate-y-1/2 translate-x-1/2"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-green-500/5 dark:bg-blue-500/10 blur-[120px] rounded-full translate-y-1/2 -translate-x-1/2"></div>

  <div class="max-w-7xl mx-auto relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-6xl font-bold mb-4 tracking-tight">
        Meet the <span
          class="text-blue-500 dark:text-blue-400">C</span
        ><span class="text-red-500 dark:text-red-400">O</span><span
          class="text-[#FBBC04] dark:text-yellow-400">R</span
        ><span class="text-green-500 dark:text-green-400">E</span> Team
      </h2>
      <p class="text-gray-600 dark:text-gray-400 text-lg md:text-xl max-w-2xl mx-auto">
        The minds shaping GDG SJECâ€™s tech culture.
      </p>
    </div>

    <div class="relative group px-4 md:px-0">
      <div 
        id={isScrollable ? "team-slider" : "team-grid"}
        class={isScrollable 
          ? "flex md:grid md:grid-cols-2 lg:grid-cols-5 overflow-x-auto md:overflow-visible no-scrollbar gap-6 md:gap-8 pb-12 pt-4 px-2 snap-x snap-mandatory" 
          : "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-8"}
      >
        {teamMembers.map((member) => (
          <div class={isScrollable ? "flex-shrink-0 w-[85%] md:w-full snap-center" : "w-full"}>
            <div class="group/card flex flex-col items-center text-center bg-gray-50 dark:bg-[#1A1D2B] border border-gray-100 dark:border-white/5 rounded-[2.5rem] p-8 md:p-10 transition-all duration-300 hover:shadow-2xl hover:shadow-blue-500/10 hover:-translate-y-2 h-full">
              
              <!-- Circular Image (Matching Event style) -->
              <div class={`w-32 h-32 md:w-32 md:h-32 rounded-full overflow-hidden mb-6 border-4 shadow-lg shrink-0 mx-auto transition-transform duration-500 group-hover/card:scale-110 ${colors[member.color] || 'border-blue-500/20'}`}>
                <Image
                  src={member.image}
                  alt={member.name}
                  class="w-full h-full object-cover"
                  width={256}
                  height={256}
                />
              </div>

              <!-- Information Below -->
              <div class="flex flex-col items-center w-full mb-6">
                <h3 class="text-xl md:text-2xl font-bold mb-1 group-hover/card:text-blue-500 dark:group-hover/card:text-blue-400 transition-colors">
                  {member.name}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm md:text-base font-semibold uppercase tracking-wider mb-4">
                  {member.role}
                </p>
              </div>

              <div class="flex gap-4">
                {member.linkedin && (
                  <a href={member.linkedin} target="_blank" class="text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-all hover:scale-110">
                    <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24"><path
                      d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                    ></path></svg>
                  </a>
                )}
                {member.github && (
                  <a href={member.github} target="_blank" class="text-gray-400 hover:text-black dark:hover:text-white transition-all hover:scale-110">
                    <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24"
          ><path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path></svg>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  section {
    font-family: "Google Sans", sans-serif;
  }
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>