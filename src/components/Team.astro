---
import teamMembers from '../content/team.json';
import { Image } from "astro:assets";
import { Linkedin, Github } from '@lucide/astro';

interface Props {
  isScrollable?: boolean;
}

const { isScrollable = false } = Astro.props;

const colors: Record<string, string> = {
  blue: "border-blue-500/20 dark:border-blue-400/30",
  red: "border-red-500/20 dark:border-red-400/30",
  yellow: "border-yellow-500/20 dark:border-yellow-400/30",
  green: "border-green-500/20 dark:border-green-400/30"
}
---

<section id="team" class="w-full py-24 px-6 md:px-12 lg:px-24 font-sans text-gray-900 dark:text-white relative overflow-hidden">
  <!-- Dynamic Background Elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-blue-500/5 dark:bg-blue-600/10 blur-[120px] rounded-full -translate-y-1/2 translate-x-1/2"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-green-500/5 dark:bg-blue-500/10 blur-[120px] rounded-full translate-y-1/2 -translate-x-1/2"></div>

  <div class="max-w-7xl mx-auto relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-6xl font-bold mb-4 tracking-tight">
        Meet the <span
          class="text-blue-500 dark:text-blue-400">C</span
        ><span class="text-red-500 dark:text-red-400">O</span><span
          class="text-[#FBBC04] dark:text-yellow-400">R</span
        ><span class="text-green-500 dark:text-green-400">E</span> Team
      </h2>
      <p class="text-gray-600 dark:text-gray-400 text-lg md:text-xl max-w-2xl mx-auto">
        The minds shaping GDG SJECâ€™s tech culture.
      </p>
    </div>

    <div class="relative group px-4 md:px-0">
      <div 
        id={isScrollable ? "team-slider" : "team-grid"}
        class={isScrollable 
          ? "flex md:grid md:grid-cols-2 lg:grid-cols-5 overflow-x-auto md:overflow-visible no-scrollbar gap-6 md:gap-8 pb-12 pt-4 px-2 snap-x snap-mandatory" 
          : "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-8"}
      >
        {teamMembers.map((member) => (
          <div class={isScrollable ? "flex-shrink-0 w-[85%] md:w-full snap-center" : "w-full"}>
            <div class="group/card flex flex-col items-center text-center bg-gray-50 dark:bg-[#1A1D2B] border border-gray-100 dark:border-white/5 rounded-[2rem] p-6 md:p-8 transition-all duration-300 hover:shadow-2xl hover:shadow-blue-500/10 hover:-translate-y-2 h-[20rem] md:h-[24rem]">
              
              <!-- Circular Image (Matching Event style scaled) -->
              <div class={`w-24 h-24 md:w-28 md:h-28 rounded-full overflow-hidden mb-6 border-4 shadow-lg shrink-0 mx-auto transition-transform duration-500 group-hover/card:scale-110 ${colors[member.color] || 'border-blue-500/20'}`}>
                <Image
                  src={member.image}
                  alt={member.name}
                  class="w-full h-full object-cover"
                  width={200}
                  height={200}
                />
              </div>
              
              <!-- Information Section -->
              <div class="flex flex-col items-center w-full">
                <h3 class="text-lg md:text-xl font-bold text-gray-900 dark:text-white group-hover/card:text-blue-500 dark:group-hover/card:text-blue-400 transition-colors leading-tight">
                  {member.name.split(' ')[0]} <br /> {member.name.split(' ').slice(1).join(' ')}
                </h3>
                
                <!-- 2 lines of spacing -->
                <div class="h-6 md:h-8"></div>
                
                <p class="text-gray-500 dark:text-gray-400 text-xs md:text-sm font-bold uppercase line-clamp-1">
                  {member.role}
                </p>
              </div>

              <!-- Social Links at Bottom -->
              <div class="mt-auto flex gap-4">
                {member.linkedin && (
                  <a href={member.linkedin} target="_blank" class="text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-all hover:scale-110">
                    <Linkedin/>
                  </a>
                )}
                {member.github && (
                  <a href={member.github} target="_blank" class="text-gray-400 hover:text-black dark:hover:text-white transition-all hover:scale-110">
                    <Github/>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>

      {isScrollable && (
        <div class="flex items-center gap-4 mt-8 px-4 md:hidden">
          <button 
            id="prev-team"
            aria-label="Previous team member"
            class="p-3 border border-gray-200 dark:border-gray-800 rounded-full text-gray-400 dark:text-gray-600 hover:text-black dark:hover:text-white hover:border-black dark:hover:border-white transition-all duration-300 focus:outline-none bg-white dark:bg-[#0B0D17] shadow-sm"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
            </svg>
          </button>
          <button 
            id="next-team"
            aria-label="Next team member"
            class="p-3 border border-gray-200 dark:border-gray-800 rounded-full text-gray-400 dark:text-gray-600 hover:text-black dark:hover:text-white hover:border-black dark:hover:border-white transition-all duration-300 focus:outline-none bg-white dark:bg-[#0B0D17] shadow-sm"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
            </svg>
          </button>
        </div>
      )}
    </div>
  </div>
</section>

<script>
  function setupSlider() {
    const slider = document.getElementById('team-slider');
    const nextBtn = document.getElementById('next-team');
    const prevBtn = document.getElementById('prev-team');

    if (slider && nextBtn && prevBtn) {
      const scroll = (direction: 'next' | 'prev') => {
        const card = slider.querySelector('.flex-shrink-0');
        if (!card) return;
        const cardWidth = (card as HTMLElement).offsetWidth;
        const spacing = 24; // gap-6
        const scrollVal = direction === 'next' ? (cardWidth + spacing) : -(cardWidth + spacing);
        slider.scrollBy({ left: scrollVal, behavior: 'smooth' });
      };

      nextBtn.addEventListener('click', () => scroll('next'));
      prevBtn.addEventListener('click', () => scroll('prev'));
    }
  }

  // Initial setup
  setupSlider();

  // Re-run on View Transitions (if enabled)
  document.addEventListener('astro:page-load', setupSlider);
</script>

<style>
  section {
    font-family: "Google Sans", sans-serif;
  }
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>