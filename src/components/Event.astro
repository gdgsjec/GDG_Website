// Astro component for animated timeline
const timelineEvents = [
  { year: "2020", title: "Project Started", description: "The journey begins" },
  { year: "2021", title: "First Milestone", description: "Reached 1000 users" },
  { year: "2022", title: "Major Update", description: "Version 2.0 released" },
  { year: "2023", title: "Expansion", description: "Global presence achieved" },
  { year: "2024", title: "Innovation", description: "AI features launched" },
