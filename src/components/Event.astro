/* Scroll Animation */
.fadeUp {
  animation: fadeUp 0.85s cubic-bezier(0.22,1,0.36,1) forwards; /* use forwards */
}

@keyframes fadeUp {
  from { opacity: 0; transform: translateY(20px) scale(0.8); }
  to { opacity: 1; transform: translateY(0) scale(1); }
}

/* Responsive */
@media (min-width: 831px) {
  .timeline-event {
    position: relative;
    display: flex;
    align-items: flex-start;
    margin: 4rem 0;
  }

  .timeline-node {
    position: absolute; /* stack on vertical line */
    left: 50%;
    transform: translateX(-50%);
    margin: 0;
    z-index: 2;
  }

