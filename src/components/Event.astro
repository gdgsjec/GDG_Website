  width: 300px;
  height:200px;
  border: 1.5px solid #a2a7a7b0;
  display: flex;
  flex-direction: column;
  opacity: 0;
  transform: translateY(20px) scale(0.92);
  transition: background 0.3s ease, color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
}

.event-card {
  transition: all 0.3s ease;
}

.event-card:hover {
  box-shadow:
    0 0 15px rgba(96, 165, 250, 0.5),  /* soft blue glow */
    0 0 25px rgba(52, 211, 153, 0.4);  /* mint green aura */
  transform: translateY(-3px);
}

.event-card:hover .event-img {
  transform: scale(1.03);
  box-shadow: 0 0 18px rgba(96, 165, 250, 0.3);
}

.event-card.expanded {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(1.05);
  width: 90%;
  max-width: 600px;
  height: auto;
  padding: 2.5rem;
  z-index: 5;
  background: #ffffff;
  box-shadow: 0 0 30px rgba(59, 130, 246, 0.3), 0 0 50px rgba(52, 211, 153, 0.4);
  transition: all 0.4s ease-in-out;
}

.event-card .event-desc.full {
  display: none;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.event-card.expanded .event-desc.short {
  display: none;
}

.event-card.expanded .event-desc.full {
  display: block;
  opacity: 1;
  margin-top: 1rem;
