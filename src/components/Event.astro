---
<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-20 px-4 flex items-center justify-start overflow-hidden">
  <div class="relative w-full max-w-7xl">
    <!-- Top Marquee: Left to Right -->
    <div class="absolute top-[10%] -left-1/2 -right-1/2 -rotate-12 ">
      <div class="bg-gradient-to-br from-green-800 to-yellow-800 py-10 shadow-2xl overflow-hidden  ">
        <div class="flex animate-marquee-left">
          <!-- Repeated content for seamless loop -->
          <div class="flex shrink-0">
            {Array(10).fill(null).map(() => (
              <span class="inline-block px-8 text-6xl md:text-8xl lg:text-9xl font-bold text-black tracking-wider text-[clamp(0.9rem,2.5vw,1.2rem)]">

               From Workshops to Hackathons
              </span>
            ))}
          </div>
          <!-- Duplicate for seamless loop -->
          <div class="flex shrink-0">
            {Array(10).fill(null).map(() => (
              <span class="inline-block px-8 text-6xl md:text-8xl lg:text-9xl font-bold text-black tracking-wider text-[clamp(0.9rem,2.5vw,1.2rem)]">
               From Workshops to Hackathons
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Marquee: Right to Left -->
    <div class="absolute bottom-[20%] -left-1/2 -right-1/2 rotate-8">
      <div class="bg-gradient-to-br from-red-700 to-blue-700 py-10 shadow-2xl overflow-hidden">
        <div class="flex animate-marquee-right">
          <div class="flex shrink-0">
            {Array(8).fill(null).map(() => (
              <span class="inline-block px-8 text-5xl md:text-7xl lg:text-8xl font-bold text-black tracking-wide text-[clamp(0.9rem,2.5vw,1.2rem)]">
                Whatâ€™s Happening at GDG SJEC
              </span>
            ))}
          </div>
          <div class="flex shrink-0">
            {Array(8).fill(null).map(() => (
              <span class="inline-block px-8 text-5xl md:text-7xl lg:text-8xl font-bold text-black tracking-wide text-[clamp(0.9rem,2.5vw,1.2rem)]">
               From Workshops to Hackathons
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tailwind Animation Keyframes -->
  <style>
    @keyframes marquee-left {
      0% {
        transform: translateX(-50%);
      }
      100% {
        transform: translateX(0%);
      }
    }

    @keyframes marquee-right {
      0% {
        transform: translateX(0%);
      }
      100% {
        transform: translateX(-50%);
      }
    }

    .animate-marquee-left {
      animation: marquee-left 40s linear infinite;
    }

    .animate-marquee-right {
      animation: marquee-right 50s linear infinite;
    }
  </style>
</div>
  