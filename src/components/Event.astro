<script>
document.addEventListener("scroll", () => {
  const line = document.querySelector(".timeline-line") as HTMLElement | null;
  const section = document.querySelector(".timeline-container") as HTMLElement | null;

  if (!line || !section) return;

  const sectionRect = section.getBoundingClientRect();
  const windowHeight = window.innerHeight;
  const totalScrollable = sectionRect.height;
  const visibleHeight = Math.min(windowHeight - sectionRect.top, totalScrollable);

  let progress = (visibleHeight / totalScrollable) * 100;
  progress = Math.min(Math.max(progress, 0), 94); // clamp 0–100%

  line.style.setProperty("--line-progress", progress + "%");
});

document.addEventListener("DOMContentLoaded", () => {
  const cards = document.querySelectorAll(".event-card");
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("fadeUp");
      } else {
        entry.target.classList.remove("fadeUp"); // remove when out of view
      }
      });
    },
    { threshold: 0.15 }
  );
  cards.forEach((card) => observer.observe(card));

   const headings = document.querySelectorAll(".scroll-animate");
  const headingObserver = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("fadeDown");
          headingObserver.unobserve(entry.target);
        }
      });
    },
    { threshold: 0.15 } // slightly earlier for better effect
  );
  headings.forEach((heading) => headingObserver.observe(heading));
});


</script>

<style>
/* Body & General */
body.show-overlay::before {
  content: "";
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  backdrop-filter: blur(10px) brightness(0.6);
  background: rgba(0, 0, 0, 0.25);
  z-index: 4;
  transition: opacity 0.3s ease;
}

body {
  background: #f0f0f0;
  color: #1E2939;
  font-family: "Segoe UI", sans-serif;
  margin: 0;
  padding: 0;
  transition: background 0.3s ease, color 0.3s ease;
}

/* Timeline Section */
.timeline-section {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 4rem 1rem;
  position: relative;
  overflow-x: hidden;
}

/* Title */
.timeline-title {
  font-size: 2.7rem;
  font-weight: bold;
  text-align: center;
  letter-spacing: 0.15em;
  color: #1E2939;
  margin-bottom: 3.5rem;
}

/* Timeline Container */
.timeline-container {
  width: 100%;
  max-width: 850px;
  position: relative;
  padding: 2rem 0;
}

/* Central line */
.timeline-line {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 5px;
  height: var(--line-progress, 0%);
  background: linear-gradient(to bottom, #60a5fa, #34d399); /* soft sky blue → mint green */
  box-shadow:
    0 0 18px rgba(52, 211, 153, 0.4),  /* soft green glow */
    0 0 10px rgba(96, 165, 250, 0.3);  /* subtle blue aura */
  border-radius: 4px;
  z-index: 0;
  transform-origin: top; /* ✅ ensures it grows downward */
  transition: height 0.25s ease-out;
}



/* Timeline Events */
.timeline-event {
  display: flex;
  align-items: center;
  width: 100%;
  margin: 3rem 0;
  position: relative;
  z-index: 2;
}

.timeline-event.left {
  justify-content: flex-end;
  padding-right: 54%;
}

.timeline-event.right {
  justify-content: flex-start;
  padding-left: 54%;
}

/* Nodes */
.timeline-node {
  position: relative;
  left: auto;
  transform: translateX(-50%);
  width: 22px;
  height: 22px;
    background: radial-gradient(circle, #F6F6F7 60%, #ff7e5f 90%);
  border: 4px solid #1e1e1e;
  border-radius: 50%;
  box-shadow:0 0 10px rgba(74, 222, 128, 0.5),  /* soft green glow */
    0 0 20px rgba(59, 130, 246, 0.3);  /* soft blue ambient glow */
  z-index: 3;
  margin-top: 1rem;
  transition: border 0.3s ease, background 0.3s ease;
}

/* Event Cards */
.event-card {
  background: #f9fafc;
  border-radius: 1.3rem;
box-shadow: 
  0 0 12px rgba(255, 183, 77, 0.2),  /* soft warm glow */
  0 0 20px rgba(236, 72, 153, 0.15); /* gentle secondary color */

