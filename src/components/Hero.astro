    <!--Waves -->
    <div class="waves">
      <svg
        class="waves"
        xmlns="http://www.w3.org/2000/svg"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        viewBox="0 24 150 28"
        preserveAspectRatio="none"
        shape-rendering="auto"
      >
        <defs>
          <path
            id="gentle-wave"
            d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"
          ></path>
        </defs>
        <g class="parallax">
          <use xlink:href="#gentle-wave" x="48" y="0" fill="var(--wave-1)" />
<use xlink:href="#gentle-wave" x="48" y="3" fill="var(--wave-2)" />
<use xlink:href="#gentle-wave" x="48" y="5" fill="var(--wave-3)" />
<use xlink:href="#gentle-wave" x="48" y="7" fill="var(--wave-4)" />

        </g>
      </svg>
    </div>
  </div>
  <script is:inline>
    const text = "Learn, build, and grow with a community powered by Google.";
    const speed = 50;
    let i = 0;
    const el = document.getElementById("subheading");
    if (!el) {
      console.error("Subheading element not found");
    } else {
      function typeText() {
        if (i < text.length) {
          el.textContent += text.charAt(i);
          i++;
          setTimeout(typeText, speed);
        }
      }
      typeText();
    }
  </script>
