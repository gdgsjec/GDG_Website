<html>
  <head>
    <style>
      .rotate {
        animation: spin 5s linear infinite; /* 5s = rotation speed */
      } /* Define the animation keyframes */
      @keyframes spin {
        from {
          transform: rotate(0deg);
        }
        to {
          transform: rotate(360deg);
        }
      }
      .waves {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 25vh;
  min-height: 100px;
  max-height: 250px;
  margin-bottom: 0;
  overflow: hidden;
}
.main {
  position: relative;
  min-height: 100vh;
  height: 100vh;
  overflow: hidden;
}

      .content {
        position: relative;
        height: 10vh;
        text-align: center;
        background-color: white;
      } /* Animation */
      .parallax > use {
        animation: move-forever 25s cubic-bezier(0.55, 0.5, 0.45, 0.5) infinite;
      }
      .parallax > use:nth-child(1) {
        animation-delay: -2s;
        animation-duration: 7s;
      }
      .parallax > use:nth-child(2) {
        animation-delay: -3s;
        animation-duration: 10s;
      }
      .parallax > use:nth-child(3) {
        animation-delay: -4s;
        animation-duration: 13s;
      }
      .parallax > use:nth-child(4) {
        animation-delay: -5s;
        animation-duration: 20s;
      }
      @keyframes move-forever {
        0% {
          transform: translate3d(-90px, 0, 0);
        }
        100% {
          transform: translate3d(85px, 0, 0);
        }
      }
      @media (max-width: 768px) {
        .waves {
          height: 150px;
          min-height: 40px;
        }
        .content {
          height: 50vh;
        }
      }
      @media (max-width: 1100px) and (min-width: 768px) {
        .txt1 {
          font-size: 60px;
        }
        .txt2 {
          font-size: 18px;
        }
        .main {
          height: 95vh;
        }
      }
      @media (max-width: 768px) and (min-width: 420px) {
        .txt1 {
          font-size: 45px;
          width: 100%;
          margin-top: 10px;
        }
        .main {
          height: 97vh;
        }
        .txt2 {
          font-size: 18px;
        }
        .button {
          width: 15vh;
        }
      }
      @media (max-width: 420px) and (min-width: 300px) {
        .txt1 {
          font-size: 50px;
          width: 100%;
          margin-top: -40px;
          margin-left: 0%;
        }
        .main {
          height: 102vh;
        }
        .txt2 {
          font-size: 18px;
          width: 100%;
          margin-top: -30px;
        }
        .button {
          width: 15vh;
        }
        .butt{
          margin-top: -5px;
        }
      } /* Subtle motion: fade + lift */
      .fade-up {
        opacity: 0;
        transform: translateY(12px);
        animation: fadeUp 1s ease-out forwards;
        animation-delay: 0.2s;
      }
      @keyframes fadeUp {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      :root {
  --wave-1: rgba(195, 236, 246, 0.7);
  --wave-2: rgba(195, 236, 246, 0.5);
  --wave-3: rgba(195, 236, 246, 0.3);
  --wave-4: #c3ecf6;
}
.dark {
  --wave-1: rgba(66, 133, 244, 0.5);   /* Google Blue */
  --wave-2: rgba(52, 168, 83, 0.5);   /* Google Green */
  --wave-4: rgba(251, 188, 5, 0.5);   /* Google Yellow */
  --wave-3: rgba(234, 67, 53, 0.25);   /* Google Red */
}

.role-card {
  display: flex;
  justify-content: center;
  align-items: center;
}

.role-circle {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  background: #111;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 1.5s linear;
}

/* ICON stays visible */
.role-circle img,
.role-circle svg {
  width: 80%;
  z-index: 1;
}

/* Hidden text */
.role-text {
  position: absolute;
  font-weight: 700;
  font-size:medium;
  letter-spacing: 3px;
  opacity: 0;
  transform: scale(0.95);
  transition: opacity 0.3s ease, transform 0.3s ease;
  z-index: 2;
}

/* Hover effects */
.role-circle:hover {
  transform: rotate(360deg);
}

.role-circle:hover .role-text {
  opacity: 1;
  transform: scale(1);
}
.member .role-text {
  color: #4285f4; /* Blue */
  font-size:larger;
}

.organizer .role-text {
  color: #34a853; /* Green */
  font-size:larger;
}

.speaker .role-text {
  color: #fbbc05; /* Yellow */
  font-size: larger;
}
.role-circle:hover .role-text {
  text-shadow: 0 0 12px currentColor;
}




