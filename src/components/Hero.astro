        }
        .typewriter {
          overflow: hidden;
          border-right: .15em solid oklch(37.2% 0.044 257.287);
          white-space: nowrap;
          visibility: hidden;
          animation: 
          showText 0s forwards,
          typing 3.5s steps(30,end),
          blink-caret .5s step-end infinite;
        }
        @keyframes showText {
          to{
            visibility: visible;
          }
        }
        @keyframes typing{
          from{
            width:0;
          }
          to{
            width: 100%;
          }
        }
        @keyframes blick-caret{
          from, to {
            border-color: transparent;
          }
          50% {
            border-color:oklch(44.6% 0.043 257.281);
          }
        }
        .t1{
          animation-delay: 1.4s;
        }
        .t2{
          animation-delay: 3.5s;
        }
        .t3{
